<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="titulo"
            type="String" />

        <variable
            name="sinopse"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/poster"
            android:layout_width="434dp"
            android:layout_height="350dp"
            android:layout_alignParentBottom="true"
            android:foreground="@drawable/imggradient"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/gambito"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="4dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/buttonreturn"
            android:layout_width="46dp"
            android:layout_height="54dp"
            android:layout_marginTop="4dp"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/setabranca" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titlemoviedescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="100dp"
            android:text="@string/movies_item_title"
            android:textColor="@color/title1"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/poster"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="@id/poster"
            app:layout_constraintTop_toBottomOf="@id/buttonreturn" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titlesinopse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="304dp"
            android:text="@string/string_titlemain"
            android:textColor="@color/titletext"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/poster"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="@id/poster"
            app:layout_constraintTop_toBottomOf="@id/buttonreturn" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/movieDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="164dp"
            android:layout_marginEnd="280dp"
            android:text="1h 40m"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/poster"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/titlesinopse"
            app:layout_constraintTop_toBottomOf="@id/buttonreturn" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="164dp"
            android:layout_marginEnd="280dp"
            android:text="02/05/2021"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/poster"
            app:layout_constraintHorizontal_bias="0.62"
            app:layout_constraintStart_toStartOf="@id/titlesinopse"
            app:layout_constraintTop_toBottomOf="@id/buttonreturn" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/genero"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/buttons"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/genermain"
            android:textColor="@color/generdescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.102"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titlemoviedescription" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/faixaetaria"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/buttons"
            android:padding="0dp"
            android:text="@string/string_etariemain"
            android:textColor="@color/generdescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.688"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titlemoviedescription" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/preferencia"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/buttons"
            android:padding="0dp"
            android:text="@string/populitymain"
            android:textColor="@color/generdescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.898"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titlemoviedescription" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textsinopse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:justificationMode="none"
            android:paddingLeft="24dp"
            android:paddingRight="16dp"
            android:text="@string/activity_main_textdescription"
            android:textColor="@color/text"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/poster"
            tools:targetApi="o" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/capa"
            android:layout_width="114dp"
            android:layout_height="161dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.111"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/gambito"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="168dp"
            android:background="#CCCC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textsinopse"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titlecompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="136dp"
            android:layout_marginTop="4dp"
            android:paddingRight="30dp"
            android:text="Description"
            android:textColor="@color/titletext"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/capa"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintVertical_bias="0.073" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textcompany"
            android:layout_width="215dp"
            android:layout_height="44dp"
            android:layout_marginTop="5dp"
            android:justificationMode="none"
            android:paddingLeft="2dp"
            android:paddingRight="16dp"
            android:text="Descrição da companhia"
            android:textColor="@color/text"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.862"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titlecompany"
            app:layout_constraintVertical_bias="0.0"
            tools:targetApi="o" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
