<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MoviesAdapter">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailsId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/movies_item_title"
            android:textColor="@color/black"
            android:layout_marginStart="145dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/gener"
            android:layout_marginStart="155dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movies_item_gener"
            android:textSize="12sp"
         />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/descriptionId"
            android:padding="10dp"

            android:layout_marginStart="155dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:textColor="#2F3435"
            android:layout_height="wrap_content"
            android:text="@string/movies_item_description"
            android:textSize="12sp"
            android:textStyle="italic"
            />



        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/poster"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/capa"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/button"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginStart="380dp"
            android:layout_marginTop="40dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/setadois"
        />


    </FrameLayout>
</layout>